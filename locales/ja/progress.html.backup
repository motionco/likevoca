    <div class="bg-gradient-to-r from-teal-50 to-cyan-50 rounded-xl p-6 border border-teal-100">
      <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-bullseye text-teal-600 mr-2"></i>
        <span data-i18n="learning_goals">学習目標</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- 日次目標 -->
        <div>
          <h3 class="text-lg font-medium mb-3" data-i18n="daily_goal">日次目標</h3>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2" data-i18n="daily_new_words">新しい単語の学習</label>
              <div class="flex items-center space-x-3">
                <input type="number" id="daily-words-goal" class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" min="1" max="100" value="10" />
                <span class="text-sm text-gray-600" data-i18n="words_per_day">個/日</span>
              </div>
              <div class="mt-2">
                <div class="flex justify-between text-xs text-gray-500 mb-1">
                  <span data-i18n="today_progress">今日の進捗</span>
                  <span id="daily-words-progress">0/10個</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-1">
                  <div id="daily-words-bar" class="bg-blue-600 h-1 rounded-full transition-all duration-300 w-0"></div>
                </div>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2" data-i18n="daily_quiz_time">クイズ時間</label>
              <div class="flex items-center space-x-3">
                <input type="number" id="daily-quiz-goal" class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" min="5" max="120" value="20" />
                <span class="text-sm text-gray-600" data-i18n="minutes_per_day">分/日</span>
              </div>
              <div class="mt-2">
                <div class="flex justify-between text-xs text-gray-500 mb-1">
                  <span data-i18n="today_progress">今日の進捗</span>
                  <span id="daily-quiz-progress">0/20分</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-1">
                  <div id="daily-quiz-bar" class="bg-green-600 h-1 rounded-full transition-all duration-300 w-0"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- 週間目標 -->
        <div>
          <h3 class="text-lg font-medium mb-3" data-i18n="weekly_goal">週間目標</h3>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2" data-i18n="weekly_study_days">学習日数</label>
              <div class="flex items-center space-x-3">
                <input type="number" id="weekly-days-goal" class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" min="1" max="7" value="5" />
                <span class="text-sm text-gray-600" data-i18n="days_per_week">日/週</span>
              </div>
              <div class="mt-2">
                <div class="flex justify-between text-xs text-gray-500 mb-1">
                  <span data-i18n="this_week_progress">今週の進捗</span>
                  <span id="weekly-days-progress">0/5日</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-1">
                  <div id="weekly-days-bar" class="bg-purple-600 h-1 rounded-full transition-all duration-300 w-0"></div>
                </div>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2" data-i18n="weekly_mastery_goal">単語マスター目標</label>
              <div class="flex items-center space-x-3">
                <input type="number" id="weekly-mastery-goal" class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" min="1" max="100" value="30" />
                <span class="text-sm text-gray-600" data-i18n="words_per_week">個/週</span>
              </div>
              <div class="mt-2">
                <div class="flex justify-between text-xs text-gray-500 mb-1">
                  <span data-i18n="this_week_progress">今週の進捗</span>
                  <span id="weekly-mastery-progress">0/30個</span>
