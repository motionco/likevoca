                <div class="w-full bg-gray-200 rounded-full h-1">
                  <div id="weekly-mastery-bar" class="bg-orange-600 h-1 rounded-full transition-all duration-300 w-0"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-6 text-center">
        <button id="save-goals-btn" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors" data-i18n="save_goals">目標を保存</button>
      </div>
