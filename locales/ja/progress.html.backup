      <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-trophy text-pink-600 mr-2"></i>
        <span data-i18n="achievements">成績・実績</span>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- クイズ実績 -->
        <div class="bg-white rounded-lg shadow-sm p-5 border border-pink-100">
          <div class="flex items-center mb-3">
            <span class="text-lg mr-2">❓</span>
            <h3 class="font-semibold text-gray-800" data-i18n="quiz_achievements">クイズ実績</h3>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="total_quizzes">総クイズ数:</span>
              <span id="total-quizzes-count" class="text-sm font-medium">0回</span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="avg_quiz_accuracy">平均正確度:</span>
              <span id="avg-quiz-accuracy" class="text-sm font-medium">0%</span>
          </div>
          </div>
        </div>
        <!-- ゲーム実績 -->
        <div id="total-games-card" class="bg-white rounded-lg shadow-sm p-5 border border-pink-100 cursor-pointer hover:shadow-md transition-shadow">
          <div class="flex items-center mb-3">
            <span class="text-lg mr-2">🎮</span>
            <h3 class="font-semibold text-gray-800" data-i18n="game_achievements">ゲーム実績</h3>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="total_games">総ゲーム数:</span>
              <span id="total-games-count" class="text-sm font-medium">0回</span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="avg_game_score">平均スコア:</span>
              <span id="avg-game-score" class="text-sm font-medium">0</span>
          </div>
          </div>
        </div>
        <!-- 学習セッション実績 -->
        <div class="bg-white rounded-lg shadow-sm p-5 border border-pink-100">
          <div class="flex items-center mb-3">
            <span class="text-lg mr-2">📖</span>
            <h3 class="font-semibold text-gray-800" data-i18n="learning_achievements">学習セッション実績</h3>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="total_sessions">総セッション数:</span>
              <span id="total-learning-sessions" class="text-sm font-medium">0回</span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="avg_session_quality">平均品質:</span>
              <span id="avg-session-quality" class="text-sm font-medium">-</span>
          </div>
          </div>
        </div>
        <!-- 総合実績 -->
        <div class="bg-white rounded-lg shadow-sm p-5 border border-pink-100">
          <div class="flex items-center mb-3">
            <span class="text-lg mr-2">⭐</span>
            <h3 class="font-semibold text-gray-800" data-i18n="overall_achievements">総合実績</h3>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="total_study_time">総学習時間:</span>
              <span id="total-study-time" class="text-sm font-medium">0分</span>
            </div>
            <div class="flex justify-between">
              <span class="text-sm text-gray-600" data-i18n="completion_rate">完了率:</span>
              <span id="completion-rate" class="text-sm font-medium">0%</span>
          </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 最近の活動 -->
    <div class="bg-gradient-to-r from-yellow-50 to-amber-50 rounded-xl p-6 mb-8 border border-yellow-100">
      <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
        <i class="fas fa-history text-yellow-600 mr-2"></i>
        <span data-i18n="recent_activities">最近の活動</span>
      </h2>
      <div id="recent-activities-list" class="space-y-3">
        <div class="text-center py-8 text-gray-500">
          <i class="fas fa-clock text-3xl mb-2"></i>
          <p data-i18n="no_recent_activities">最近の活動はありません。</p>
        </div>
      </div>
    </div>

