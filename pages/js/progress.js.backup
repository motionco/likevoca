// ìœ í‹¸ë¦¬í‹° í•¨ìˆ˜ë“¤
function getTimeAgo(date) {
  const userLanguage = localStorage.getItem("userLanguage") || "ko";

  if (!date) {
    return userLanguage === "ko"
      ? "ë°©ê¸ˆ ì „"
      : userLanguage === "en"
      ? "Just now"
      : userLanguage === "ja"
      ? "ä»Š"
      : userLanguage === "zh"
      ? "åˆšåˆš"
      : "ë°©ê¸ˆ ì „";
  }

  const now = new Date();
  const diffMs = now - date;
  const diffMins = Math.floor(diffMs / (1000 * 60));
  const diffHours = Math.floor(diffMs / (1000 * 60 * 60));
  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));

  if (diffMins < 1) {
    return userLanguage === "ko"
      ? "ë°©ê¸ˆ ì „"
      : userLanguage === "en"
      ? "Just now"
      : userLanguage === "ja"
      ? "ä»Š"
      : userLanguage === "zh"
      ? "åˆšåˆš"
      : "ë°©ê¸ˆ ì „";
  }

  if (diffMins < 60) {
    const minText =
      userLanguage === "ko"
        ? "ë¶„ ì „"
        : userLanguage === "en"
        ? " minutes ago"
        : userLanguage === "ja"
        ? "åˆ†å‰"
        : userLanguage === "zh"
        ? "åˆ†é’Ÿå‰"
        : "ë¶„ ì „";
    return `${diffMins}${minText}`;
  }

  if (diffHours < 24) {
    const hourText =
      userLanguage === "ko"
        ? "ì‹œê°„ ì „"
        : userLanguage === "en"
        ? " hours ago"
        : userLanguage === "ja"
        ? "æ™‚é–“å‰"
        : userLanguage === "zh"
        ? "å°æ—¶å‰"
        : "ì‹œê°„ ì „";
    return `${diffHours}${hourText}`;
  }

  const dayText =
    userLanguage === "ko"
      ? "ì¼ ì „"
      : userLanguage === "en"
      ? " days ago"
      : userLanguage === "ja"
      ? "æ—¥å‰"
      : userLanguage === "zh"
      ? "å¤©å‰"
      : "ì¼ ì „";
  return `${diffDays}${dayText}`;
}

